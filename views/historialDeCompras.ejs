<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historial de Compras - Aká Mercado</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css"> 
</head>
<body>
    <header class="header">
        <div class="container">
            <h1 class="mb-4">Historial de Compras</h1>
        </div>
    </header>
    <div class="container mt-4">
        <% historial.forEach(compra => { %>
            <div class="card mb-4">
                <div class="card-header">
                    <h4>Pedido realizado el <%= new Date(compra.fecha).toLocaleDateString() %></h4>
                    <p>Dirección: <%= compra.direccion %></p>
                    <p>Total: $<%= compra.total %></p>
                    <p>Estado: <%= compra.estado === 1 ? 'En proceso' : 'Completado' %></p>
                </div>
                <div class="card-body">
                    <h5>Productos</h5>
                    <ul class="list-group">
                        <% compra.products.forEach(item => { %>
                            <li class="list-group-item">
                                <strong><%= item.productId.name %></strong><br>
                                <img src="<%= item.productId.imagenes[0] %>" alt="<%= item.productId.name %>" width="100"><br>
                                Cantidad: <%= item.cantidad %><br>
                                Precio unitario: $<%= item.precio %><br>
                                Subtotal: $<%= item.cantidad * item.precio %>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        <% }) %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>